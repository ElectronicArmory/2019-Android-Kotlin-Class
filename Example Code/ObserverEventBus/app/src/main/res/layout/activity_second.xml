<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity" android:orientation="horizontal">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText" android:hint="Your message here" android:layout_weight="1"/>
    <Button
            android:text="Post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/post_message_button" android:layout_weight="3"/>
</LinearLayout>